<div class="page-header">
    <div class="row">
        <div class="span5">
            <h1><%= @user.full_name %></h1>
        </div>
        <div class="span3 offset4">
            <%= image_tag current_user.gravatar_url %>
        </div>
    </div>
</div>

<% if @statuses %>
    <% @statuses.each do |status| %>
        <div class="well">
            <%= status.content %> 
            <hr />
            <%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
        </div>
    <% end %>
<% end %>