

<%= simple_form_for(current_user, url: para_path, html: { method: :post, id: "myForm"}) do |f| %>
    <%= f.hidden_field :user_lat, :id => "lat" %>
    <%= f.hidden_field :user_lng, :id => "lng" %>
    <%= f.button :submit , :style => "visibility:hidden" %>
<% end %>


<h4 style="text-align:center;color:#FFF">Getting position..</h4>


<script type="text/javascript">

  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(GeoL);
  }
  else {
    console.log('Geolocation is not supported for this Browser/OS version yet.');
  }
  
  function GeoL(position) {
    document.getElementById("lat").value = position.coords.latitude;
    document.getElementById("lng").value = position.coords.longitude;
    submitform();
  }
        
  function submitform() {
    document.getElementById('myForm').submit();
  }
    
</script>



