<div class="row">
  <div class="span6">
 
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well", multipart: true}) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <div class="text" style="color:#333333;">
        <legend>Sign up!</legend>
        <%= f.input :first_name , label: false, placeholder: "First Name" %>
        <%= f.input :last_name , label: false, placeholder: "Last Name"%>
        <%= f.input :profile_name , label: false, placeholder: "Profile Name" %>
        <%= f.input :email , label: false, placeholder: "Email" %>
        <%= f.input :password , label: false, placeholder: "Password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <br>
          <em>(at least one char of [A-Z] and one number)</em>
        <% end %><br />
        
        <%= f.input :password_confirmation , label: false, placeholder: "Repeat Password" %>
        <br>
        <label>Profile Image</label>
        <br>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
        <%= f.hidden_field :user_lat, :id => "lat" %>
        <%= f.hidden_field :user_lng, :id => "lng" %>
        
        <br><br>
          
        <dirv class="actions">
          <%= f.button :submit, "Sign up", :class => 'btn btn-info' %>
        </div>
        </div>
      </fieldset>
    <% end %>
    
    

  </div>
</div>


<script type="text/javascript">
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(GeoL);
        function GeoL(position) {
          document.getElementById('lat').value = position.coords.latitude;
          document.getElementById('lng').value = position.coords.longitude;
        }
    }
    else {
      console.log('Geolocation is not supported for this Browser/OS version yet.');
    }
</script>